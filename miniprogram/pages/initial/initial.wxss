/* pages/initial/initial.wxss */
.container{
  height:100%;
  width: 100%;
}

.mainview{
  position: fixed;
  width: 100%;
  height: 60%;
  bottom: 20%;
}

#icon {
  position: relative;
  top: 10px;
  display: block;
  margin-left: auto;
  margin-right: auto;
  width: 40%;
  margin: auto;
}

#title{
  position: relative;
  top: 10px;
  display: block;
  font-size: 22pt;
  font-weight:bold;
  text-align: center;
  letter-spacing: 2pt;
}

.button{
  display: block;
  position: relative;
  margin: auto;
  top: 150px;
  text-align: center;
  border: 3px solid #98B2E5;
  border-radius: 30px;
  background-color: #4A77D2;
  color: #ffffff;
}

.effect{
  position: fixed;
  bottom: 0;
  height: 0;
  width: 100%;
  background-color: #4A77D2;
}

.effect-active{
  position: fixed;
  bottom: 0;
  height: 100%;
  width: 100%;
  background-color: #4A77D2;
  transition: height 0.3s ease-out;
}