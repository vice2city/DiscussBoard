/* pages/index1/index1.wxss */
#tip{
  position: relative;
  top: 100px;
  display: block;
  text-align: center;
  letter-spacing: 1px;
  font-size: 20px;
}

.container{
  padding-left: 10px;
  padding-right: 10px;
  padding-top: 20px;
}


.board{
  display: block;
  background-image: linear-gradient(to right,#ffffff, #98B2E5);
  width: 100%;
  height: 60px;
  margin-bottom: 15px;
  border: 2px solid #4A77D2;
  border-radius: 10px;
  box-shadow:2px 2px 5px #4A77D2;
}

.title{
  position: relative;
  top: 15px;
  text-align: left;
  font-size: 18px;
  letter-spacing: 1px;
  padding-left: 20px;
  padding-right: 20px;
  overflow: hidden;
  text-overflow: ellipsis; 
}

.icon{
  position: relative;
  margin: auto;
  bottom: 22px;
  left: 90%;
}

.warn{
  position: relative;
  bottom: 12px;
}